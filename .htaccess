# Noindex utility/contract pages etc
<FilesMatch "^(gom-onboarding|smartbotpro-agreement|thank-you)\.html$">
  Header set X-Robots-Tag "noindex, nofollow, noarchive"
</FilesMatch>

RewriteEngine On

# Set default homepage files
DirectoryIndex index.html index.php index.htm

# Disable directory listings
Options -Indexes

# Disable caching for sensitive assets
<IfModule mod_headers.c>
  Header set Cache-Control "no-cache, no-store, must-revalidate"
  Header set Pragma "no-cache"
  Header set Expires "0"
</IfModule>

# Redirect /osagold to homepage
RewriteRule ^osagold$ https://greatowlmarketing.com/ [R=301,L]

# âœ… Content Security Policy
<IfModule mod_headers.c>
  Header set Content-Security-Policy "
    default-src 'self';
    script-src 'self' 'unsafe-inline' 'unsafe-eval' https://app.getresponse.com https://an.gr-wcon.com;
    connect-src 'self' https://app.getresponse.com https://an.gr-wcon.com;
    img-src 'self' data: https://app.getresponse.com https://an.gr-wcon.com;
    style-src 'self' 'unsafe-inline' https://app.getresponse.com;
    frame-src https://app.getresponse.com https://an.gr-wcon.com;
  "
</IfModule>
